{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "strictPropertyInitialization": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["eperusteet-frontend-utils/vue/src/*"],
      "@assets/*": ["eperusteet-frontend-utils/vue/public/*"],
      "@/*": ["src/*"],
      "&/*": ["tests/*"]
    },
    "lib": [
      "esnext",
      "es2015.promise",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.svg",
    "eperusteet-frontend-utils/vue/src/**/*.ts",
    "eperusteet-frontend-utils/vue/src/**/*.vue",
    "tests/integration/**/*.ts",
    "tests/integration/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "eperusteet-frontend-utils"
  ]
}

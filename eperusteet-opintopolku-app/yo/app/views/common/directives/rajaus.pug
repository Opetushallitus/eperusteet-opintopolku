div(ng-class='applyClasses()')
  span.input-group-addon(ng-class="{'input-sm': size === 'small'}", icon-role='search')
  input.form-control(ng-change='changed()', ng-model='model', placeholder="{{ (placeholderstring || '') | kaanna }}", ng-class="{'input-sm': size === 'small'}", ui-keydown="{esc: 'clear($event)'}")
  span.input-group-addon.rajaus-clear(ng-show='model', ng-class="{'input-sm': size === 'small'}", title="{{'tyhjenna-rajaus-tooltip'|kaanna}}", ng-click='clear()', icon-role='remove')

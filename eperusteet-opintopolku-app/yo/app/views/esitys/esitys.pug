#main.main-content
  h1.peruste-otsikko(ng-bind-html='peruste.nimi | kaanna | unsafe')
  murupolku
  .clearfix
  #sivunavi-sisalto-wrapper
    .esitys
      .sivunavi-navigaatio.sivunavi-simple
        ep-sivunavigaatio(ng-if='suoritustavat.length > 1', items='navi.items', header='navi.header', disable-rajaus='true')
          select.form-control.input-sm(ng-model='suoritustapa', ng-change='vaihdaSuoritustapa(suoritustapa)', ng-options='kaanna(st) for st in suoritustavat')
        ep-sivunavigaatio(ng-if='suoritustavat.length <= 1', items='navi.items', header='navi.header', disable-rajaus='true')
      .sivunavi-clear
      .sivunavi-sisalto
        .row
          .col-md-12
            #esitysPrintSisalto(ui-view='')
